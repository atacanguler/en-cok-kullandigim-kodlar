
            string sonuc = "";

            string BASLIK = "Yeni Kitap Ekleme Epostası - Kitapliğim.com.tr";
            string GOVDE = "";

            string kullaniciposta = "info@kitapligim.com.tr";
            string sifre = "EnteR1715**";
            string giden_eposta = "atacanguler@gmail.com";

            bool booll = false;

            string host = "win5.wlsrv.com";
            string PORT = "587";


            GOVDE = "gfhfhgfghfhgfhgfhfghgfhgfhfhgf";



            try
            {

                SmtpClient smtpClient = new SmtpClient(host, int.Parse(PORT));

                smtpClient.Credentials = new System.Net.NetworkCredential(kullaniciposta, sifre);
                // smtpClient.UseDefaultCredentials = true; // uncomment if you don't want to use the network credentials
                smtpClient.DeliveryMethod = SmtpDeliveryMethod.Network;
                smtpClient.EnableSsl = booll;

                MailMessage mail = new MailMessage();

                //Setting From , To and CC
                mail.From = new MailAddress(kullaniciposta);
                mail.To.Add(new MailAddress(giden_eposta));
                mail.IsBodyHtml = true;
                mail.Subject = BASLIK;
                mail.Body = GOVDE;

                smtpClient.Send(mail);

                /////////////////////////////////////////////////////////////////////////

                sonuc = "1";
            }
            catch
            {
                sonuc = "0";
            }

            return sonuc;
